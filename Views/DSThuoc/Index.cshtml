@model PagedList.IPagedList<QuanLySanXuatDuoc.Models.tThuoc>

@using PagedList.Mvc;
@{
    <title>Danh Sách Thuốc</title>
    Layout = "~/Views/Shared/_Layout.cshtml";
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/PagedList.css" rel="stylesheet" />
}

<div class="container" style="margin: 0px 0px 0px 430px">
    <div class="row">
        <div class="col-md-12">
            <h2 style="text-align: center">Danh Sách Thuốc</h2>
            <table class="table">
                <tr>
                    <th>
                        Mã Thuốc
                    </th>
                    <th>
                        Tên Thuốc
                    </th>
                    <th>
                        Quy Cách
                    </th>
                    <th>
                        Cài Đặt (
                        @Html.ActionLink("Thêm Mới", "../DSThuoc/Create") |
                        @Html.ActionLink("Tìm Kiếm", "../DSThuoc/Find")
                        )
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.MaThuoc)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TenThuoc)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.QuyCach)
                        </td>
                        <td>
                            @Html.ActionLink("Sửa", "Edit", new { id = item.MaThuoc }) |
                            @Html.ActionLink("Chi Tiết", "Details", new { id = item.MaThuoc }) |
                            @Html.ActionLink("Xóa", "Delete", new { id = item.MaThuoc })
                        </td>
                    </tr>
                }

            </table>
            @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
        </div>
    </div>
</div>