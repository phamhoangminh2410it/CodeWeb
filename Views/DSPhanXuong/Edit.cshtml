@model QuanLySanXuatDuoc.Models.tPhanXuong

@{
    <title>Sửa</title>
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Sửa Thông Tin Phân Xưởng</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

