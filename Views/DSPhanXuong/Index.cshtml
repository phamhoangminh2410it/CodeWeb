@model PagedList.IPagedList<QuanLySanXuatDuoc.Models.tPhanXuong>

@using PagedList.Mvc;
@{
    <title>Danh Sách Phân Xưởng</title>
    Layout = "~/Views/Shared/_Layout.cshtml";
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/PagedList.css" rel="stylesheet" />
}

<div class="container" style="margin: 0px 0px 0px 430px">
    <div class="row">
        <div class="col-md-12">
            <h2 style="text-align: center">Danh Sách Phân Xưởng</h2>
            <table class="table">
                <tr>
                    <th>
                        Mã Phân Xưởng
                    </th>
                    <th>
                        Tên phân Xưởng
                    </th>
                    <th>
                        Địa Chỉ
                    </th>
                    <th>
                        Điện Thoại
                    </th>
                    <th>
                        Họ Tên Quản Đốc
                    </th>
                    <th>
                        Cài Đặt (
                        @Html.ActionLink("Thêm Mới", "../DSPhanXuong/Create") |
                        @Html.ActionLink("Tìm Kiếm", "../DSPhanXuong/Find")
                        )
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.MaPhanXuong)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TenPhanXuong)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DiaChi)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DienThoai)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.HoTenQuanDoc)
                        </td>
                        <td>
                            @Html.ActionLink("Sửa", "Edit", new { id = item.MaPhanXuong }) |
                            @Html.ActionLink("Chi Tiết", "Details", new { id = item.MaPhanXuong }) |
                            @Html.ActionLink("Xóa", "Delete", new { id = item.MaPhanXuong })
                        </td>
                    </tr>
                }

            </table>
            @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
        </div>
    </div>
</div>