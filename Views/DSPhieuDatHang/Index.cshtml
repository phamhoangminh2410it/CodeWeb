@model PagedList.IPagedList<QuanLySanXuatDuoc.Models.tPhieuDatHang>

@using PagedList.Mvc;
@{
    <title>Danh Sách Phiếu Đặt Hàng</title>
    Layout = "~/Views/Shared/_Layout.cshtml";
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/PagedList.css" rel="stylesheet" />
}

<div class="container" style="margin: 0px 0px 0px 430px">
    <div class="row">
        <div class="col-md-12">
            <h2 style="text-align: center">Danh Sách Phiếu Đặt Hàng</h2>
            <table class="table">
                <tr>
                    <th>
                        Số Phiếu
                    </th>
                    <th>
                        Ngày Lập Phiếu
                    </th>
                    <th>
                        Mã Khách Hàng
                    </th>
                    <th>
                        Cài Đặt (
                        @Html.ActionLink("Thêm Mới", "../DSPhieuDatHang/Create") |
                        @Html.ActionLink("Tìm Kiếm", "../DSPhieuDatHang/Find")
                        )
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.SoPhieu)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NgayLapPhieu)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.MaKH)
                        </td>
                        <td>
                            @Html.ActionLink("Sửa", "Edit", new { id = item.SoPhieu }) |
                            @Html.ActionLink("Chi Tiết", "Details", new { id = item.SoPhieu }) |
                            @Html.ActionLink("Xóa", "Delete", new { id = item.SoPhieu })
                        </td>
                    </tr>
                }

            </table>
            @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
        </div>
    </div>
</div>