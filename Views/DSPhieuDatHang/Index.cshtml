@model IEnumerable<QuanLySanXuatDuoc.Models.tPhieuDatHang>

@{
    <title>Danh Sách Phiếu Đặt Hàng</title>
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="margin: 0">
    <div class="row">
        <div class="col-md-12">
            <h2>Danh Sách Phiếu Đặt Hàng</h2>
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.SoPhieu)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.NgayLapPhieu)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.MaKH)
                    </th>
                    <th>
                        Cài Đặt (
                        @Html.ActionLink("Thêm Mới", "../DSPhieuDatHang/Create") |
                        @Html.ActionLink("Tìm Kiếm", "../DSPhieuDatHang/Find")
                        )
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.SoPhieu)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NgayLapPhieu)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.MaKH)
                        </td>
                        <td>
                            @Html.ActionLink("Sửa", "Edit", new { id = item.SoPhieu }) |
                            @Html.ActionLink("Chi Tiết", "Details", new { id = item.SoPhieu }) |
                            @Html.ActionLink("Xóa", "Delete", new { id = item.SoPhieu })
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>