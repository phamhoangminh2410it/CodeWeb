@model PagedList.IPagedList<QuanLySanXuatDuoc.Models.tPhanCong>

@using PagedList.Mvc;
@{
    <title>Danh Sách Phân Công</title>
    Layout = "~/Views/Shared/_Layout.cshtml";
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/PagedList.css" rel="stylesheet" />
}

<div class="container" style="margin: 0px 0px 0px 430px">
    <div class="row">
        <div class="col-md-12">
            <h2 style="text-align: center">Danh Sách Phân Công</h2>
            <table class="table">
                <tr>
                    <th>
                        Số Phân Công
                    </th>
                    <th>
                        Mã Phân Xưởng
                    </th>
                    <th>
                        Số Phiếu
                    </th>
                    <th>
                        Mã Thuốc
                    </th>
                    <th>
                        Số Lượng
                    </th>
                    <th>
                        Cài Đặt (
                        @Html.ActionLink("Thêm Mới", "../DSPhanCong/Create") |
                        @Html.ActionLink("Tìm Kiếm", "../DSPhanCong/Find")
                        )
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.SoPhanCong)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.MaPhanXuong)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SoPhieu)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.MaThuoc)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SoLuong)
                        </td>
                        <td>
                            @Html.ActionLink("Sửa", "Edit", new { id = item.SoPhanCong }) |
                            @Html.ActionLink("Chi Tiết", "Details", new { id = item.SoPhanCong }) |
                            @Html.ActionLink("Xóa", "Delete", new { id = item.SoPhanCong })
                        </td>
                    </tr>
                }

            </table>
            @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
        </div>
    </div>
</div>